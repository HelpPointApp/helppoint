<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.example.reubert.appcadeirantes.view.MapsActivity"
        android:layout_marginBottom="70dp"
        android:layout_below="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/view">

        <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pedir ajuda"
        android:id="@+id/btnRequestHelp"
        android:background="@color/colorPrimary"
        android:textColor="@color/lightText"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="Meus pontos: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myPointsLabel"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:textColor="@color/lightText"/>

        <TextView
            android:text="930"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myPointsValue"
            android:layout_alignBaseline="@+id/myPointsLabel"
            android:layout_alignBottom="@+id/myPointsLabel"
            android:layout_toRightOf="@+id/myPointsLabel"
            android:layout_toEndOf="@+id/myPointsLabel"
            android:textColor="@color/lightText" />
    </RelativeLayout>


</RelativeLayout>